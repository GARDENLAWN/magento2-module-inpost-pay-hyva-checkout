<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd"
>
    <body>
        <referenceContainer name="hyva.checkout.components">
            <block name="inpost.hyva.checkout.widget.checkout"
                   template="InPost_InPostPayHyvaCheckout::initialize-widget-checkout.phtml"
                   before="additional.signin-register"
                   ifconfig="payment/inpost_pay/show_on_checkout">
                <arguments>
                    <argument name="binding_place" xsi:type="const">
                        InPost\InPostPay\Provider\Config\DisplayConfigProvider::CHECKOUT_PAGE_BINDING_PLACE_NAME
                    </argument>
                    <argument name="widget_view_model" xsi:type="object">InPost\InPostPay\ViewModel\Widget</argument>
                    <argument name="metadata" xsi:type="array">
                        <item name="icon" xsi:type="array">
                            <item name="src" xsi:type="string">GardenLawn_Hyvatheme::images/InPost/InPostPay.svg</item>
                            <item name="attributes" xsi:type="array">
                                <item name="alt" xsi:type="string" translate="true">InPost Pay</item>
                            </item>
                        </item>
                    </argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>

